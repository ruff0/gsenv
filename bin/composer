#!/bin/sh

pushd `dirname $0` > /dev/null
SCRIPTPATH=`pwd`
popd > /dev/null

function upsearch () {
  slashes=${PWD//[^\/]/}
  directory="$PWD"
  for (( n=${#slashes}; n>0; --n ))
  do
    test -e "$directory/$1" && echo "$directory/$1" && return 
    directory="$directory/.."
  done
}


default="latest"

value=$(upsearch ".phpversion")
if [[ -z "$value" ]]; then 
  version=$default
else 
  version=`cat $value`
fi
php="/usr/local/php-$version/bin/php"
if [ -e "$php" ]; then
  $php "$SCRIPTPATH/composer.phar" $*
else
  echo "PHP $version was not found"
fi

